@model App.Data.Entity.AdvertImage

@{
    ViewData["Title"] = "Resim Sil";
}

<h3>Silmek İstediğinize Emin misiniz?</h3>
<div>
    <h4>AdvertImage</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class = "col-sm-10">
            <img src="/Image/@Model.ImagePath" alt="" height="50" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.adverts)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.adverts.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>
