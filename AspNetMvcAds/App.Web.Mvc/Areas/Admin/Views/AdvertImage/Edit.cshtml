@model AdvertImage

@{
    ViewData["Title"] = "Düzenle";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AdvertId" class="control-label"></label>
                <select asp-for="AdvertId" class="form-control" asp-items="ViewBag.AdvertId"></select>
                <span asp-validation-for="AdvertId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" type="file"/>
                <span asp-validation-for="ImagePath" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="/Image/@Model.ImagePath" alt="" height="50" />
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            @Html.CheckBox("resmiSil") Resmi Sil
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
